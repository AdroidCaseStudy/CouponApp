<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_layout"
    app:startDestination="@id/navNews">
    <fragment
        android:id="@+id/navNews"
        android:name="com.cg.couponsapp.NewsFragment"
        android:label="News"
        tools:layout="@layout/fragment_news">
        <action
            android:id="@+id/action_newsFragment_to_couponsFragment"
            app:destination="@id/navCoupons" />
    </fragment>
    <fragment
        android:id="@+id/navCoupons"
        android:name="com.cg.couponsapp.CouponsFragment"
        android:label="Coupons"
        tools:layout="@layout/fragment_coupons" />
    <fragment
        android:id="@+id/navFeed"
        android:name="com.cg.couponsapp.FeedFragment"
        android:label="Feed"
        tools:layout="@layout/fragment_feed" />
    <fragment
        android:id="@+id/navSettings"
        android:name="com.cg.couponsapp.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
</navigation>